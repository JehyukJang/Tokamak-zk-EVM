{
  "extends": "../../../config/monorepo-js/tsconfig.json",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
     "moduleResolution": "node16",
     "allowJs": false,
     "declaration": true,
     "outDir": "./dist",
      "skipLibCheck": true,
    "baseUrl": ".",
      "allowSyntheticDefaultImports": true,
       "noEmit": true,  // 필수: allowImportingTsExtensions와 함께 사용
    "paths": {
      "@ethereumjs/util": ["libs/util/dist/esm/index"],
      "@ethereumjs/common": ["libs/common/dist/esm/index"],
      "@ethereumjs/statemanager": ["libs/statemanager/dist/esm/index"],
      "@ethereumjs/util/*": ["libs/util/dist/esm/*"],
      "@ethereumjs/common/*": ["libs/common/dist/esm/*"],
      "@ethereumjs/statemanager/*": ["libs/statemanager/dist/esm/*"],
      "@ethereumjs/mpt": ["libs/mpt/dist/esm/index"],
      "@ethereumjs/mpt/*": ["libs/mpt/dist/esm/*"],
      "@ethereumjs/verkle": ["libs/verkle/dist/esm/index"],
      "@ethereumjs/verkle/*": ["libs/verkle/dist/esm/*"]
    },
  },
}

